<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/music_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/music" />

    <LinearLayout
        android:id="@+id/header_now_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playlist_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#004d00"
            android:gravity="center_horizontal"
            android:text="@string/playlist"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/now_playing_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#004d00"
            android:gravity="center_horizontal"
            android:text="@string/now_playing"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_now_playing"
        android:background="#6E8B3D"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="@string/now_playing"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/album_text_now_playing_label"
        android:layout_width="168dp"
        android:layout_height="98dp"
        android:layout_alignBottom="@id/music_img"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="221dp"
        android:background="#84254A"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:text="@string/album"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/song_text_now_playing"
        android:layout_width="164dp"
        android:layout_height="105dp"
        android:layout_alignBottom="@id/music_img"
        android:layout_marginLeft="-14dp"
        android:layout_marginBottom="361dp"
        android:layout_toRightOf="@+id/song_text_now_playing_label"
        android:background="#696969"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:text="soon"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/song_text_now_playing_label"
        android:layout_width="168dp"
        android:layout_height="98dp"
        android:layout_alignBottom="@id/music_img"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="381dp"
        android:background="#84254A"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:text="@string/song"
        android:textColor="@android:color/white"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/album_text_now_playing"
        android:layout_width="164dp"
        android:layout_height="105dp"
        android:layout_alignBottom="@id/music_img"
        android:layout_marginLeft="-15dp"
        android:layout_marginBottom="234dp"
        android:layout_toRightOf="@+id/song_text_now_playing_label"
        android:background="#696969"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:text="soon"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/music_img"
        android:orientation="horizontal">


        <Button
            android:id="@+id/prev_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:background="#004d00"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/prev"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/play_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#004d00"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/play"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/next_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="#004d00"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/next"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>